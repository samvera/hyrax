<% if curation_concern.persisted? && curation_concern.member_ids.present? %>
  <div class="row">
    <div class="col-md-12">
      <fieldset id="representative-image">
        <legend>
          Assign a Thumbnail
        </legend>
        <p>Select the file whose thumbnail should represent this <%= curation_concern.human_readable_type %>.</p>
        <%= f.select(:representative_id, @form.files_hash, {}, { class: 'form-control' }) %>
      </fieldset>
    </div>
  </div>
<% end %>
