<table class="table table-striped collections-list-table collection-works-table">
  <caption class="sr-only">List of items in this collection</caption>
  <thead>
  <tr>
    <th>&nbsp;</th>
    <th class="title-column">Title</th>
    <th>Date added</th>
    <th>Owner</th>
    <th>Visibility</th>
    <% if current_user %>
      <th>Action</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
    <%= render partial: 'show_document_list_row', collection: documents, as: :document %>
  </tbody>
</table>
