<% provide :page_header do %>
  <h1><span class="fa fa-sitemap" aria-hidden="true"></span><%= t('.manage_embargoes') %></h1>
<% end %>

<div class="card tabs">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a onclick="changeLocale('active', <% request.params[:tag] %>)" class="nav-link active" href="#active" data-toggle="tab">
        <%= t('.active') %>
      </a>
    </li>
    <li class="nav-item">
      <a onclick="changeLocale('expired', <% request.params[:tag] %>)" class="nav-link" href="#expired" data-toggle="tab">
        <%= t('.expired') %>
      </a>
    </li>
    <li class="nav-item">
      <a onclick="changeLocale('deactivated', <% request.params[:tag] %>)" class="nav-link" href="#deactivated" data-toggle="tab">
        <%= t('.deactivated') %>
      </a>
    </li>
  </ul>
  <div class="card-body">
    <div class="tab-content">
      <div class="tab-pane show active" id="active">
        <%= render "list_active_embargoes" %>
      </div>
      <div class="tab-pane" id="expired">
        <%= render "list_expired_active_embargoes" %>
      </div>
      <div class="tab-pane" id="deactivated">
        <%= render "list_deactivated_embargoes" %>
      </div>
    </div>
  </div>
</div>
