<%= simple_form_for [hyrax, @form], html: { multipart: true } do |f| %>
  <% content_for :files_tab do %>
    <p class="switch-upload-type">To create a single work for all the files, go to
      <%= link_to "New Work", [main_app, :new, Hyrax.primary_work_type.model_name.singular_route_key] %></p>
    <p class="instructions"><%= t("hyrax.batch_uploads.files.instructions") %></p>
  <% end %>
  <%= render 'hyrax/base/guts4form', f: f, tabs: %w[files metadata relationships share] do %>
  <% end %>
  <%= f.hidden_field :payload_concern, value: @form.payload_concern %>
<% end %>

<script type="text/javascript">
  Blacklight.onLoad(function() {
    $("#fileupload").fileupload('option', 'downloadTemplateId', 'batch-template-download')
  });
</script>
