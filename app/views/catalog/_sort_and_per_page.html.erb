<div class="well"> 
	<% unless @response.response['numFound'] < 2 %>
	  <%-# kind of hacky way to get this to work on catalog and folder controllers.  May be able to simple do {:action=>"index"} but I'm not sure -%>
    <%= form_tag params[:controller] == "folder" ? folder_index_path : catalog_index_path, :method=>:get, :class=>'per_page form-inline' do %>
      <%= label_tag(:per_page) do %>
        Show <%= select_tag(:per_page, options_for_select(['10', '20', '50', '100'], h(params[:per_page])), :title => "Number of results to display per page", :class=>"span1") %> per page
        <% end %>
      <%= search_as_hidden_fields(:omit_keys => [:page, :per_page]) %>
      <%= submit_tag 'update', :class=>'btn' %>
    <% end %>

    <%-# kind of hacky way to get this to work on catalog and folder controllers.  May be able to simple do {:action=>"index"} but I'm not sure -%>
		<%= form_tag params[:controller] == "folder" ? folder_index_path : catalog_index_path, :method=>:get, :class=>'sort form-inline', :id => "sort_form" do %>
      <%= label_tag(:sort, "Sort by ") %>
      <%= select_tag(:sort, options_for_select(sort_fields, h(params[:sort])), :class=>"span2") %>			      
      <%= search_as_hidden_fields(:omit_keys => [:page, :sort]) %>
      <%= submit_tag 'sort results', :class=>'btn' %>
		<% end unless sort_fields.empty? %>
	<% end %>
</div>
