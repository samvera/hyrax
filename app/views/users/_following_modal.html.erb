<div class="modal-div">

  <!-- Text to trigger modal -->
  <i class="glyphicon glyphicon-hand-right"></i> <a data-toggle="modal" href="#following">Following:</a> <span class="badge"><%= following.count %></span>

  <!-- Modal -->
  <!-- Modal -->
  <div class="modal fade" id="following" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <% if following.count > 0 %>
            <h3>Following</h3>
            <ul>
              <% following.each do |f| %>
                <li><%= link_to f.name, sufia.profile_path(f), title: "View user's profile" %></li>
              <% end %>
            </ul>
          <% else %>
            <% if current_user && user.id == current_user.id %>
                <h3> <%= t("sufia.user_profile.no_following") %></h3>
            <% else %>
                <h3> <%= t("sufia.user_profile.no_following_other") %></h3>
            <% end %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
